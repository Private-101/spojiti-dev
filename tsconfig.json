{
  "exclude": ["./cypress", "./cypress.config.ts", "node_modules", ".vscode", "scripts"],
  // "app/**/**/*.{tsx, ts}", "app/components/**/*.tsx", "app/components/**/*.ts",
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", "app/experimental/interactive-menu/data/hardData.js"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "types": ["vitest/globals"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "tremor/*": ["./app/components/tremor/*"]
    },
    "skipLibCheck": true,

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
